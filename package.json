{
  "name": "mina-testing-utils",
  "version": "0.0.1",
  "description": "Handful MINA testing utilx to be used alongside with zkapp-cli generated projects",
  "main": "lib/index.js",
  "types": "lib/types.ts",
  "type": "module",
  "scripts": {
    "test": "node --experimental-wasm-threads node_modules/jest/bin/jest.js",
    "lint": "tslint -c tslint.json 'lib/**/*.ts' 'test/**/*.ts'",
    "build": "rimraf ./dist && tsc && cp package* ./dist/ && cp lib/types.ts ./dist/lib/",
    "dev-pack": "npm run build && npm pack ./dist/"
  },
  "author": "Globant",
  "license": "MIT",
  "devDependencies": {
    "@jest/globals": "29.6.2",
    "@types/jest": "29.5.3",
    "rimraf": "5.0.1",
    "ts-jest": "29.1.1",
    "tslint": "6.1.3",
    "typescript": "5.1.6"
  },
  "peerDependencies": {
    "snarkyjs": "0.12.*"
  }
}
